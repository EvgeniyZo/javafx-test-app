<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.javafxtestapp.LoginController">
    <GridPane alignment="CENTER">
        <Label text="Логин:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="loginField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label text="Пароль:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    </GridPane>
    <Label fx:id="messageLabel" alignment="CENTER" />
    <Button fx:id="loginButton" alignment="CENTER" text="Войти" onAction="#onLoginClick">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin></Button>
</VBox>
